import random
import string
while True:
    try:
        def number_velues():
            number_of_values = int(input('Скільки символів ти хочеш?: '))
            if number_of_values < 3:
                print('мінімум 3 символа')
                return number_velues()
            else:
                return number_of_values
        def number_password():
            number_of_passwords = int(input('скільки паролей ти хочеш?: '))
            if number_of_passwords < 0:
                print('мені не потрібен твій пароль')
                return number_password()
            else:
                return number_of_passwords
        soft_or_hard = input('ти хочеш важкий пароль?(yes/no)?: ').lower() == 'yes'
        if soft_or_hard is True:
            soft = 3
        else:
            soft = 0
        number_of_values = number_velues()
        a = string.ascii_lowercase + string.ascii_uppercase + string.digits + string.punctuation
        for i in range(number_password()):
            b = []
            if soft_or_hard is True:
                b.append(random.choice(string.ascii_uppercase))
                b.append(random.choice(string.digits))
                b.append(random.choice(string.punctuation))
            for i in range(number_of_values - soft):
                b.append(random.choice(a))
            random.shuffle(b)
            j = ''.join(b)
            print(j)
        break
    except ValueError:
        print('ви ввели щось не те')
    except:
        print('зроби не як дибіл')
